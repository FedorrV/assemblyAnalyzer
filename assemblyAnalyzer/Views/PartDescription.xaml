        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:assemblyAnalyze"
        mc:Ignorable="d"
        Title="Описание детали" Height="200" Width="300" >
        
        <StackPanel  Orientation="Vertical" Margin="2">
