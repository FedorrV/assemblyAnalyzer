<Window x:Class="assemblyAnalyze.SavePart"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:assemblyAnalyze"
        mc:Ignorable="d"
        Title="Описание детали" FontSize="12" 
        Height="200" MaxHeight="200" MinHeight="200" Width="330" MinWidth="330" MaxWidth="330">
        <StackPanel  Orientation="Vertical" Margin="2">
        <TextBox MinHeight="110" Text="{Binding TextValue, UpdateSourceTrigger=PropertyChanged}"
                     MaxLength="150" TextWrapping="Wrap" Width="300" MinWidth="300" MaxWidth="300">
            </TextBox>
        <TextBlock Foreground="Red"  Visibility="Visible" Text="{Binding AlertMessage}" Margin="2"></TextBlock>
            <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft"
                        Height="auto">
            <Button Margin="0 2 2 2" Padding="3" 
                    Command="{Binding CmdSavePart}" CommandParameter="{Binding TextValue}" Click="Button_Click_1"
                    >Сохранить</Button>
            <Button Margin="2" Padding="2" Command="{Binding CmdCancelSave}" Click="Button_Click">Отмена</Button>
            </StackPanel>
        </StackPanel>
    
</Window>
