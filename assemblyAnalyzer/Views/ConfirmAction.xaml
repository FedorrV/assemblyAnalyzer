<Window x:Class="assemblyAnalyze.ConfirmAction"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:assemblyAnalyze"
        mc:Ignorable="d"
        Title="Подтверждение действия" FontSize="13" 
        Height="200" MaxHeight="130" MinHeight="130" Width="330" MinWidth="330" MaxWidth="330">
    <StackPanel  Orientation="Vertical" Margin="8 4 8 4">
        <TextBlock MinHeight="50" TextWrapping="Wrap" Width="300" MinWidth="300" MaxWidth="300"
        Text="{Binding QuestionText, UpdateSourceTrigger=PropertyChanged}"></TextBlock>
        <StackPanel Orientation="Horizontal" FlowDirection="RightToLeft"
                        Height="auto">
            <Button Margin="0 2 2 2" Padding="3"  Width="70" Click="Button_Click_1" Command="{Binding CmdCancelAction}">
                Нет
            </Button>
            <Button Name="ConfirmBTN" Margin="2" Padding="2" Width="70" Command="{Binding CmdConfirmAction}" Click="Button_Click">
                Да
            </Button>
        </StackPanel>
    </StackPanel>
</Window>
